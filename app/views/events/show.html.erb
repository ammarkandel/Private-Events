<% if @event.date_time < Time.now %>
  <div class="alert alert-secondary" role="alert">Registration for this event is now closed</div>
<% end %>

<p>Created by : <%= @event.creator.name %></p>
<p>title: <%= @event.title.titleize %></p>
<p>description: <%= @event.description %></p>
<p>location: <%= @event.location %></p>
<p>date: <%= @event.date_time %></p>

<% if current_user == @event.creator %>
<p><%= link_to('Edit', edit_event_path(@event)) %></p>
<p><%= link_to('Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }) %></p>
<% elsif @event.attendees.include?(current_user) %>
    <%= link_to 'Cancel Enrollment', cancel_enrollment_event_path, class: "enrollment-btn" %>
<% else %>
    <%= link_to 'Enrollment', enrollment_event_path, class: "enrollment-btn" unless @event.date_time < Time.now %>
<% end %>


<p class="attendees">ATTENDEES</p>

<% if @event.attendees.empty? %>
<div>
  <li>This event has no attendees yet</li>
</div>
<% else %>
  <div>
    <% @event.attendees.each do |attendee| %>
    <li> <%= attendee.name %> </li>
    <% end %>
  </div>
<% end %>
