<%= form_with(model: event, local: true) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.label :title, class: "label" %>
      <%= f.text_field :title, class: "input", autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :date_time, class: "label" %>
      <%= f.date_select :date_time, type: "date", class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :location, class: "label" %>
      <%= f.text_field :location, class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :description, class: "label" %>
      <%= f.text_field :description, class: "textarea" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Create Event", class:"button" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= link_to 'Cancel', root_path, class:"button" %>
    </div>
  </div>
<% end %>