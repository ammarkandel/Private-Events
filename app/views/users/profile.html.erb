<h1> <%= @user.name %> </h1>

<div>
  <div>
    <p class="text-muted"> <%= pluralize(@user_created_events.count, 'event').upcase %> CREATED</p>
    <div>
        <% @user_created_events.each do |event| %>
          <%= link_to event.title, event_path(event) %>
        <% end %>
    </div>
  </div>
  <div>
    <p class="text-muted"> <%= pluralize(@user_attended_events.count, 'event').upcase %> ATTENDED</p>
    <div>
        <% @user_attended_events.each do |event| %>
          <%= link_to event.title, event_path(event) %>
        <% end %>
    </div>
  </div>
</div>